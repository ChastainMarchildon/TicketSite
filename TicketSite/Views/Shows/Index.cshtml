@model IEnumerable<TicketSite.Models.Show>

@{
    ViewBag.Title = "All Shows";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Shows</h2>

<p>
    @Html.ActionLink("Create New Show", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Venue Name")
        </th>
        <th>
            @Html.DisplayName("Tickets")
        </th>
        <th>
            @Html.DisplayName("Artist Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Venue_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tickets)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ShowID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ShowID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ShowID })
        </td>
    </tr>
}

</table>
